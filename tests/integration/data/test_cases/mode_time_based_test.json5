  version: "v1.0.2",
  api_key: "openmind_free",
  default_mode: "patrol",
  modes: {
    patrol: {
      display_name: "Patrol",
      description: "Patrol mode with short timeout",
      system_prompt_base: "You are patrolling the area.",
      hertz: 1,
      timeout_seconds: 0.1,
      agent_inputs: [{ type: "GoogleASRInput" }],
      cortex_llm: { type: "OpenAILLM", config: { agent_name: "Buddy" } },

  agent_actions: [
    {
      name: "move",
      llm_label: "move",
      connector: "ros2",
    },
    {
      name: "speak",
      llm_label: "speak",
      connector: "ros2",
    },
    {
      name: "face",
      llm_label: "emotion",
      connector: "ros2",
    },
  ],
  api_key: "openmind_free",

  // Input data
  input: {
    images: ["../images/indoor_1.jpg"],
    odometry: ["../state/odometry_moving.json"],
